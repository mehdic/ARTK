{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "outDir": "./dist-cjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "version.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-cjs",
    "dist-legacy-16",
    "dist-legacy-14",
    "autogen/**",
    "compat/**",
    "scripts/**",
    "src/templates/**",
    "templates/**",
    "ignore/**",
    "docker/**",
    "__fixtures__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/__tests__/**"
  ]
}
