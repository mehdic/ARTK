{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://artk.dev/schemas/artk-config-v2.json",
  "title": "ARTK Configuration Schema v2.0",
  "description": "Configuration schema for artk.config.yml used in ARTK pilot projects",
  "type": "object",
  "required": ["schema", "project", "targets", "auth"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "2.0",
      "description": "Schema version (must be 2.0)"
    },
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Project name"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        }
      }
    },
    "targets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "type", "environments"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$",
            "description": "Target name (kebab-case)"
          },
          "path": {
            "type": "string",
            "description": "Relative path to frontend directory"
          },
          "type": {
            "type": "string",
            "enum": ["react-spa", "vue-spa", "angular", "next", "nuxt", "other"],
            "description": "Frontend framework type"
          },
          "environments": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
              "type": "object",
              "required": ["baseUrl"],
              "properties": {
                "baseUrl": {
                  "type": "string",
                  "format": "uri",
                  "description": "Base URL for this environment"
                }
              }
            }
          }
        }
      }
    },
    "auth": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["oidc", "form", "token", "none"],
          "description": "Authentication type"
        },
        "provider": {
          "type": "string",
          "description": "Auth provider name (e.g., keycloak)"
        },
        "keycloak": {
          "type": "object",
          "properties": {
            "realm": {
              "type": "string",
              "description": "Keycloak realm name"
            },
            "clientId": {
              "type": "string",
              "description": "Keycloak client ID"
            },
            "authServerUrl": {
              "type": "string",
              "format": "uri",
              "description": "Keycloak server URL"
            }
          }
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "username", "password"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Role identifier"
              },
              "username": {
                "type": "string",
                "description": "Username (supports env var substitution)"
              },
              "password": {
                "type": "string",
                "description": "Password (supports env var substitution)"
              },
              "keycloakRole": {
                "type": "string",
                "description": "Keycloak role ID"
              }
            }
          }
        }
      }
    },
    "test": {
      "type": "object",
      "properties": {
        "tier": {
          "type": "string",
          "enum": ["smoke", "release", "regression"],
          "default": "release",
          "description": "Default test tier"
        },
        "stabilityPasses": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Consecutive passes required for stability (CLR-002)"
        },
        "authRetryOnce": {
          "type": "boolean",
          "default": true,
          "description": "Retry auth once on failure (CLR-001)"
        }
      }
    }
  }
}
