{
  "name": "@artk/cli",
  "version": "1.0.0",
  "description": "ARTK CLI - Bootstrap Playwright test suites with AI-assisted workflows",
  "type": "module",
  "bin": {
    "artk": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "npm run bundle-assets && tsup",
    "build:cli": "tsup",
    "bundle-assets": "node --loader ts-node/esm scripts/bundle-assets.ts",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.8",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mehdic/ARTK.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "artk",
    "playwright",
    "testing",
    "e2e",
    "regression",
    "cli"
  ],
  "author": "ARTK Team",
  "license": "MIT"
}
