{
  "name": "@artk/core-autogen",
  "version": "0.1.0",
  "description": "ARTK AutoGen Core - Deterministic test generation engine for Playwright E2E tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/codegen/templates && cp src/codegen/templates/*.ejs dist/codegen/templates/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "artk-autogen": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "artk",
    "playwright",
    "test-generation",
    "e2e",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.10",
    "fast-glob": "^3.3.3",
    "ts-morph": "^24.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-playwright": "^2.1.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@artk/core": ">=1.0.0",
    "@playwright/test": ">=1.57.0"
  },
  "peerDependenciesMeta": {
    "@artk/core": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    }
  }
}
